package principal;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);
		
		int valor1 = 50;
		int valor2 = 65;
		
		//final sinaliza que a variavel é uma constante
		//uma constante é quando o valor nao muda
		final double PI = 3.1415;
		
		//realiza a potencia/ primeiro é a base e depois a potencia
		System.out.println(Math.pow(2, 2));
		
		//passsagem de 2 numeros como parametro
		//retona o maior deles
		System.out.println(Math.max(valor1, valor2));
		
		//É o inverso do maior, retorna o minimo
		System.out.println(Math.min(5, 20));
		
		//retorna a raiz quadrada e um numero
		System.out.println(Math.sqrt(18));
		
		//arredonda esse numero (para mais ou menos)
		System.out.println(Math.round(25.6578));
		
		//retorna a raiz quadrada e um numero
		//podemos realizar calculos com valores 
		//retornados pelo calculo Math
		System.out.println(2+ Math.sqrt(18));
		
		//Locale permite que voce defina configurações para diferentes idiomas,
		// pais, variantes e outras informações, permite que o program exiba e adapte
		Locale ponto = new Locale("en", "us");
		//neste caso para manter o padrão, americano, e manter o ponto e não aceitar vigula
		
		System.out.println("Entre com valor do dolar: ");
		//recebe os dados no formato pré definido no locale
		double dolar = leia.useLocale(ponto).nextDouble();	
		
		System.out.println("valor dolar digitado: "+ dolar);
		
		String nome= "Luan";
		char sexo ='M';
		int idade = 30;
		double altura = 1.8333338414;
		
		System.out.printf("O meu nome é %s, sou do sexo %c, tenho %d anos, minha altura é %f"+ nome, sexo, idade, altura);
	
		
		leia.close();
	}

}
