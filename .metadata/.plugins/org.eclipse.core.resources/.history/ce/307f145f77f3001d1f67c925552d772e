package principal;
/*
 * 5- Leia duas matrizes 4 x 4 e escreva uma terceira com os maiores valores de cada posição das matrizes lidas.

 */

import java.util.Scanner;

public class Li4ex5 {
	public void maiores() {
		Scanner scan = new Scanner(System.in);
		int [][] matriz = new int [2][2];
		int [][] matriz2 = new int [2][2];
		int [][] matriz3 = new int [2][2];
	
		
		for(int i = 0; i < 2; i++) {
			for(int j = 0; j < 2; j++){
				System.out.println("Digite os valores da primeira matriz: ");
				matriz[i][j] = scan.nextInt();
			}
			}
		for(int i = 0; i < 2; i++) {
			for(int j = 0; j < 2; j++){
				System.out.println("Digite os valores da segunda matriz: ");
				matriz2[i][j] = scan.nextInt();
			}
		}
		for(int i = 0; i < 2; i++) {
			for(int j = 0; j < 2; j++){
				matriz3[i][j] = Math.max(matriz[i][j],matriz2[i][j]);
			}
		}
		scan.close();
	}
	public static void main() {
		Li4ex5 obj = new Li4ex5();
		obj.maiores();
	}

}
