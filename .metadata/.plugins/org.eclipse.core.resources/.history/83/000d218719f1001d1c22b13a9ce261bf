package principal;

import java.util.Scanner;

/*
 * Faça um aplicativo que receba o ano de nascimento e o ano atual e mostre na tela sua idade;
 */

public class Nascimento {
	public void calculo(){
		Scanner scan = new Scanner(System.in);
		int aniver, ano;
		
		System.out.println("Digite o dia do seu aniversário: ");
		aniver = scan.nextInt();
		
		System.out.println("Digite o ano atual: ");
		ano = scan.nextInt();
		
		int idade = aniver - ano;
		
		System.out.printf("No ano de %f o solicitante tem %f anos", ano, idade);
	}

	public static void main(String[] args) {
		Nascimento obj = new Nascimento();
		obj.calculo();
		
	}

}
